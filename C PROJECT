#include <stdio.h>

int main() {
    int correctPin = 1234, enteredPin;
    int choice, attempts = 0;
    float balance = 15000.00;
    float amount;
    int newPin;

    printf("====================================\n");
    printf("        WELCOME TO ATM MACHINE       \n");
    printf("====================================\n");

    /* PIN Authentication */
    while (attempts < 3) {
        printf("Enter your 4-digit PIN: ");
        scanf("%d", &enteredPin);

        if (enteredPin == correctPin) {
            printf("‚úÖ Login Successful!\n");
            break;
        } else {
            attempts++;
            printf("‚ùå Incorrect PIN. Attempts left: %d\n", 3 - attempts);
        }
    }

    if (attempts == 3) {
        printf("üö´ Card blocked. Please contact bank.\n");
        return 0;
    }

    /* ATM Menu */
    do {
        printf("\n========== ATM MENU ==========\n");
        printf("1. Balance Inquiry\n");
        printf("2. Cash Withdrawal\n");
        printf("3. Cash Deposit\n");
        printf("4. Change PIN\n");
        printf("5. Mini Statement\n");
        printf("6. Exit\n");
        printf("==============================\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {

            case 1:
                printf("üí∞ Current Balance: %.2f\n", balance);
                break;

            case 2:
                printf("Enter withdrawal amount: ");
                scanf("%f", &amount);

                if (amount <= 0) {
                    printf("‚ùå Invalid amount.\n");
                } else if (amount > balance) {
                    printf("‚ùå Insufficient balance.\n");
                } else {
                    balance -= amount;
                    printf("‚úÖ Please collect your cash.\n");
                    printf("Remaining Balance: %.2f\n", balance);
                }
                break;

            case 3:
                printf("Enter deposit amount: ");
                scanf("%f", &amount);

                if (amount <= 0) {
                    printf("‚ùå Invalid amount.\n");
                } else {
                    balance += amount;
                    printf("‚úÖ Deposit successful.\n");
                    printf("Updated Balance: %.2f\n", balance);
                }
                break;

            case 4:
                printf("Enter new PIN: ");
                scanf("%d", &newPin);
                correctPin = newPin;
                printf("üîê PIN changed successfully.\n");
                break;

            case 5:
                printf("\n------ MINI STATEMENT ------\n");
                printf("Available Balance: %.2f\n", balance);
                printf("Last transaction displayed only.\n");
                printf("----------------------------\n");
                break;

            case 6:
                printf("üôè Thank you for using ATM.\n");
                break;

            default:
                printf("‚ùå Invalid choice. Try again.\n");
        }

    } while (choice != 6);

    return 0;
}
